enable-pre-post-scripts=true
ignore-scripts=false
confirm-scripts=false
# Allow build scripts for dependencies that need them
enable-pre-post-scripts=true

# Disable build script approval requirement
# This allows all dependencies to run their build scripts without explicit approval
enable-auto-install-peers=true

# Disable build script restrictions entirely (pnpm 10.x)
only-built-dependencies[]

# Netlify CI can fail right after dependency upgrades because pnpm may reject
# very recently published versions ("minimum release age" safety gate).
# This project regularly tracks newer Next.js releases, so disable the gate
# to keep builds deterministic across local/CI environments.
minimum-release-age=0

# Extra safety: allow freshly published Next internal packages even if a
# developer/global pnpm config re-enables the age gate.
minimum-release-age-exclude[]=@next/env
